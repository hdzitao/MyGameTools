<Window x:Name="entry" x:Class="SteamAccountSwitcher.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        mc:Ignorable="d"
        Title="输入密码"  Width="280" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" KeyDown="entry_KeyDown" Height="110">
    <Grid Margin="0" Width="260" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="buttonEntry" Content="确定" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="180,32,0,0" Click="buttonEntry_Click"/>
        <PasswordBox x:Name="pwBoxPasswd" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Margin="80,0,0,0" Height="20"/>
        <Button x:Name="buttonReset" Content="重置" HorizontalAlignment="Left" Margin="80,32,0,0" VerticalAlignment="Top" Width="60" Click="buttonReset_Click"/>
        <Image HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Margin="10,0,0,0" Source="key.png"/>
    </Grid>
</Window>
